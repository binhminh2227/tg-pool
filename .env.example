# Telegram API
API_ID=1234567
API_HASH=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Worker callback (/post-new)
CALLBACK_URL=https://telegram.faker.today/post-new
CALLBACK_BEARER=YOUR_CALLBACK_BEARER

# Protect VPS APIs
API_BEARER=YOUR_VPS_API_BEARER

# Polling
SCAN_INTERVAL_SEC=60
BATCH_MAX=50
BACKOFF_MIN_MS=150
BACKOFF_MAX_MS=600

# Sessions: put *.session inside /opt/tg-pool/sessions/
SESS_RESCAN_SEC=30
JOIN_INTERVAL_SEC=300
JOIN_JITTER_MS=5000

# Media
INCLUDE_MEDIA=true
MEDIA_MAX_MB=20

# Bind
BIND_HOST=0.0.0.0
BIND_PORT=8080
