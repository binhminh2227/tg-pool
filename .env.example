# Telegram API
API_ID=123456
API_HASH=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# REST security
API_BEARER=changeme

# Callback to Worker
CALLBACK_URL=https://your-worker.example.com/post-new
CALLBACK_BEARER=your-callback-bearer

# Scan/poll
SCAN_INTERVAL_SEC=60
BATCH_MAX=50
BACKOFF_MIN_MS=150
BACKOFF_MAX_MS=600
SESS_RESCAN_SEC=30
JOIN_INTERVAL_SEC=300
JOIN_JITTER_MS=5000

# Alerts (optional)
TELEGRAM_ALERT_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
TELEGRAM_ALERT_TOPIC_ID=

# Media
INCLUDE_MEDIA=false
MEDIA_MAX_MB=20

# --------- LLM / OpenAI ----------
# Nhiều key, ngăn cách bằng dấu phẩy. VD: sk-1,sk-2,sk-3
OPENAI_KEYS=sk-xxxxxxxxxxxxxxxxxxxxxxxx,sk-yyyyyyyyyyyyyyyyyyyyyyyy

# (tuỳ chọn) base & model
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# --------- Lọc mặc định (có thể override theo kênh) ----------
FILTER_LINKS_DEFAULT=true       # bỏ link trước khi call GPT
FILTER_CAPTION_DEFAULT=true     # bỏ caption/credit nguồn cuối bài trước khi call GPT
