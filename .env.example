# --- Telegram API ---
API_ID=123456
API_HASH=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# --- REST security ---
API_BEARER=changeme

# --- Callback to Worker (/post-new) ---
CALLBACK_URL=https://your-worker.example.com/post-new
CALLBACK_BEARER=your-callback-bearer

# --- Scan/poll ---
SCAN_INTERVAL_SEC=60
BATCH_MAX=50
BACKOFF_MIN_MS=150
BACKOFF_MAX_MS=600
SESS_RESCAN_SEC=30
JOIN_INTERVAL_SEC=300
JOIN_JITTER_MS=5000

# --- Alerts (optional) ---
TELEGRAM_ALERT_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
TELEGRAM_ALERT_TOPIC_ID=

# --- Media ---
INCLUDE_MEDIA=true
MEDIA_MAX_MB=20

# --------- OpenAI (multi-key router) ----------
OPENAI_KEYS=sk-AAA,sk-BBB,sk-CCC
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_RETRY_ATTEMPTS=3
OPENAI_RETRY_DELAY_MS=400
OPENAI_BACKOFF_FACTOR=2.0

# --------- Lọc mặc định (override bởi kênh) ----------
FILTER_LINKS_DEFAULT=true
FILTER_CAPTION_DEFAULT=true

# --------- SYS extra gửi kèm cho mọi lời gọi GPT ----------
LLM_SYS_EXTRA=Keep original language; strictly preserve line breaks.
